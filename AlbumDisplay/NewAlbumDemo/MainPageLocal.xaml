                            <Binding ElementName="flipView" Path="SelectedIndex" Converter="{StaticResource LeftselectedIndexToBoolConverter}" Mode="OneWay"/>
                        </Button.IsEnabled>
                        <FontIcon Glyph="&#xE76B;" FontSize="12" Width="10"/>
